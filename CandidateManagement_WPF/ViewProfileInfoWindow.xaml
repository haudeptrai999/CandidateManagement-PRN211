            <TextBox x:Name="txtProfileShortDescription" HorizontalAlignment="Center" Margin="0,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Height="46" IsReadOnly="True" FontWeight="Bold"/>
            <Label Content="Profile URL" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Height="32" Width="190" Foreground="White" FontWeight="SemiBold" FontSize="15"/>
            <TextBox x:Name="txtProfileURL" HorizontalAlignment="Center" Margin="0,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Height="32" IsReadOnly="True" FontWeight="Bold"/>
        </Grid>
    </Border>
</Window>
